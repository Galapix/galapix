{
    "app-id": "io.gitlab.galapix.Galapix",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "20.08",
    "sdk": "org.freedesktop.Sdk",
    "rename-icon": "galapix",
    "rename-desktop-file": "galapix.desktop",
    "rename-appdata-file": "galapix.appdata.xml",
    "finish-args": [
        "--device=all",
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--socket=wayland"
    ],
    "modules": [
        "shared-modules/glu/glu-9.json",
        "shared-modules/glew/glew.json",
        "shared-modules/sigc++/sigc++-2.0.json",
        "shared-modules/fmt/fmt.json",
        "shared-modules/glm/glm.json",
        "shared-modules/imagemagick/imagemagick-6.9.11.json",
        {
            "name": "galapix",
            "buildsystem": "cmake",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DBUILD_GALAPIX_SDL=ON",
                "-DBUILD_GALAPIX_GTK=OFF"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.com/galapix/galapix.git",
                    "branch": "develop"
                }
            ]
        }
    ]
}
